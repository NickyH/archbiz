#recipenavbar
  .panel.recipenavpanel
    .row
      .small-12.columns
        = link_to('Add Recipe', new_recipe_path, :remote => 'true', :class => 'recipezybtn_recipeadd', :id => 'new_recipe_btn')
        = link_to('Browse All', recipes_path, :remote => 'true', :class => 'recipezybtn_recipenav', :id => 'browse_recipes')
        %hr
        #selectbytext= 'Or select by:'


        = form_tag filter_recipes_path, :method => :get, :remote => true do
          .selectfrom= select_tag 'ingredient_select', options_for_select(@ingredients.map{ |i| [i, i] })
          .recipezybtn_selectby= submit_tag 'Ingredient'

        = form_tag filterbytime_recipes_path, :method => :get, :remote => true do
          .selectfrom= select_tag 'time_select', options_for_select(@time.map{ |t| [t, t] })
          .recipezybtn_selectby= submit_tag 'Time'
          / = select_tag 'Cost', options_for_select(@costs.map{ |c| [c, c] })

.rowrecipes
  .small-7.columns
    #new_recipe

